{
  "name": "dlf-working-groups",
  "version": "0.0.1",
  "description": "DLF Working Groups platform",
  "scripts": {
    "lint": "npm-run-all --parallel --continue-on-error lint:*",
    "lint:css": "stylelint '**/*.scss'",
    "lint:formatting": "prettier --check '**/*.{scss,js,json}",
    "format": "prettier --write '**/*.{scss,js,json}",
    "test": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clirdlf/working-groups.diglib.org.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/clirdlf/working-groups.diglib.org/issues"
  },
  "homepage": "https://github.com/clirdlf/working-groups.diglib.org#readme",
  "prettier": {
    "endOfLine": "lf",
    "semi": false,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "^11.0.0"
  },
  "dependencies": {
    "bootstrap": "^5.3.2",
    "bootstrap-icons": "^1.11.1"
  }
}
